{
    "name": "cartalyst/sentinel",
    "description": "PHP 5.4+ Fully-featured Authentication & Authorization System",
    "keywords": [
        "php",
        "cartalyst",
        "laravel",
        "auth",
        "security",
        "codeigniter",
        "fuelphp"
    ],
